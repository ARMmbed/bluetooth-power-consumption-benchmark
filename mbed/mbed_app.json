{
    "config": {
        "scan_time": {
            "value": 6000,
            "help": "How long to wait for connection when scanning (10ms)",
            "required": true
        },
        "advertise_time": {
            "value": 6000,
            "help": "How long to wait for connection when advertising (10ms)",
            "required": true
        },
        "connect_time": {
            "value": 60000,
            "help": "How long to stay connected when master (ms)",
            "required": true
        },
        "periodic_interval": {
            "value": 50,
            "help": "Average interval for periodic advertising (10ms)",
            "required": true
        },
        "use_per_adv_sync": {
            "value": true,
            "help": "Whether to support periodic advertising and sync",
            "required": true
        }
    },
    "target_overrides": {
        "*": {
            "platform.stdio-baud-rate": 115200,
            "mbed-trace.enable": false,
            "mbed-trace.max-level": "TRACE_LEVEL_DEBUG",
            "cordio.trace-cordio-wsf-traces": false,
            "cordio.trace-hci-packets": false,
            "cordio.trace-pal-echoes": false,
            "ble.trace-human-readable-enums": true
        }
    }
}
